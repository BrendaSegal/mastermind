<p>Puzzle #{{ puzzle.puzzleCode }}</p>
<div style='display:flex;width:300px;justify-content: space-between;background: gray;padding: 0 20px;height: 400px;border-radius: 5px'>
    {% for slot in puzzle.mastermindCodeSlots %}
        <div style='background-color: {{ slot.color.name }};height:30px;width:30px;border-radius:50%;' class="slot">
            &nbsp;
        </div>
    {% endfor %}
</div>

<style type="text/css">
    .slot {
        position: relative;
        display: flex;
        justify-content: center;
        flex-direction: column;
    }

    .slot:after {
        content: "";
        background-color: white;
        width: 10px;
        height: 10px;
        position: absolute;
        top:50%;
        left: 50%;
        border-radius: 50%;
        transform: translateX(-50%) translateY(-50%);
    }
</style>